# A pod composed of containers
apiVersion: v1 kind: Pod metadata:
name: mytomcat labels:name: mytomcat spec:
containers:
-name: mytomcat image: tomcat ports:
-containerPort: 800

#Two tightly coupled containers
apiVersion: v1 kind: Pod metadata:
name: myweb labels:
name: tomcat-redis
spec:
containers:
-name: tomcat image: tomcat ports:
-containerPort: 8080
-name: redis image: redis ports:
-containerPort: 637
